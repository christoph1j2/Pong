<Window x:Class="Pong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Name="Background" Background="RoyalBlue" ClipToBounds="True">
        <Ellipse x:Name="Ball" Fill="#FFD30035" Height="30" Canvas.Left="737" Stroke="Black" Canvas.Top="344" Width="30">
            <Ellipse.Effect>
                <DropShadowEffect/>
            </Ellipse.Effect>
        </Ellipse>
        <Rectangle x:Name="rectLeft" Fill="Blue" Height="448" Stroke="Black" Width="27" Canvas.Left="-25" Canvas.Top="-15"/>
        <Rectangle x:Name="rectRight" Fill="Blue" Height="448" Stroke="Black" Width="27" Canvas.Left="793" Canvas.Top="-15"/>
        <Rectangle x:Name="rectBottom" Fill="Blue" Height="27" Stroke="Black" Width="820" Canvas.Top="419" Canvas.Left="-11"/>
        <Rectangle x:Name="rectTop" Fill="Blue" Height="27" Stroke="Black" Width="820" Canvas.Top="-24" Canvas.Left="-11"/>
        <Rectangle x:Name="Player" Fill="Black" Height="20" Stroke="Black" Width="100" Canvas.Left="330" Canvas.Top="391"/>
    </Canvas>
</Window>
